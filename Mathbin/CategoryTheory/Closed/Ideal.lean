/--
We construct a bijection between morphisms `L(A ‚®Ø B) ‚ü∂ X` and morphisms `LA ‚®Ø LB ‚ü∂ X`.
This bijection has two key properties:
* It is natural in `X`: See `bijection_natural`.
* When `X = LA ‚®Ø LB`, then the backwards direction sends the identity morphism to the product
  comparison morphism: See `bijection_symm_apply_id`.

Together these help show that `L` preserves binary products. This should be considered
*internal implementation* towards `preserves_binary_products_of_exponential_ideal`.
-/
noncomputable def bijection (A B : C) (X : D) :
  ((left_adjoint i).obj (A ‚®Ø B) ‚ü∂ X) ‚âÉ ((left_adjoint i).obj A ‚®Ø (left_adjoint i).obj B ‚ü∂ X) :=
  calc _ ‚âÉ (A ‚®Ø B ‚ü∂ i.obj X) := (adjunction.of_right_adjoint i).homEquiv _ _ 
    _ ‚âÉ (B ‚®Ø A ‚ü∂ i.obj X) := (limits.prod.braiding _ _).homCongr (iso.refl _)
    _ ‚âÉ (A ‚ü∂ B ‚üπ i.obj X) := (exp.adjunction _).homEquiv _ _ 
    _ ‚âÉ (i.obj ((left_adjoint i).obj A) ‚ü∂ B ‚üπ i.obj X) :=
    unit_comp_partial_bijective _ (exponential_ideal.exp_closed (i.obj_mem_ess_image _) _)
    _ ‚âÉ (B ‚®Ø i.obj ((left_adjoint i).obj A) ‚ü∂ i.obj X) := ((exp.adjunction _).homEquiv _ _).symm 
    _ ‚âÉ (i.obj ((left_adjoint i).obj A) ‚®Ø B ‚ü∂ i.obj X) := (limits.prod.braiding _ _).homCongr (iso.refl _)
    _ ‚âÉ (B ‚ü∂ i.obj ((left_adjoint i).obj A) ‚üπ i.obj X) := (exp.adjunction _).homEquiv _ _ 
    _ ‚âÉ (i.obj ((left_adjoint i).obj B) ‚ü∂ i.obj ((left_adjoint i).obj A) ‚üπ i.obj X) :=
    unit_comp_partial_bijective _ (exponential_ideal.exp_closed (i.obj_mem_ess_image _) _)
    _ ‚âÉ (i.obj ((left_adjoint i).obj A) ‚®Ø i.obj ((left_adjoint i).obj B) ‚ü∂ i.obj X) :=
    ((exp.adjunction _).homEquiv _ _).symm 
    _ ‚âÉ (i.obj ((left_adjoint i).obj A ‚®Ø (left_adjoint i).obj B) ‚ü∂ i.obj X) :=
    by 
      apply iso.hom_congr _ (iso.refl _)
      haveI  : preserves_limits i := (adjunction.of_right_adjoint i).rightAdjointPreservesLimits 
      exact (preserves_limit_pair.iso _ _ _).symm 
    _ ‚âÉ ((left_adjoint i).obj A ‚®Ø (left_adjoint i).obj B ‚ü∂ X) := (equiv_of_fully_faithful _).symm
    

theorem bijection_symm_apply_id (A B : C) : (bijection i A B _).symm (ùüô _) = prod_comparison _ _ _ :=
  by 
    dsimp [bijection]
    rw [comp_id, comp_id, comp_id, i.map_id, comp_id, unit_comp_partial_bijective_symm_apply,
      unit_comp_partial_bijective_symm_apply, uncurry_natural_left, uncurry_curry, uncurry_natural_left, uncurry_curry,
      prod.lift_map_assoc, comp_id, prod.lift_map_assoc, comp_id, prod.comp_lift_assoc, prod.lift_snd,
      prod.lift_fst_assoc, prod.lift_fst_comp_snd_comp, ‚Üêadjunction.eq_hom_equiv_apply, adjunction.hom_equiv_unit,
      iso.comp_inv_eq, assoc, preserves_limit_pair.iso_hom]
    apply prod.hom_ext
    ¬∑
      rw [limits.prod.map_fst, assoc, assoc, prod_comparison_fst, ‚Üêi.map_comp, prod_comparison_fst]
      apply (adjunction.of_right_adjoint i).Unit.naturality
    ¬∑
      rw [limits.prod.map_snd, assoc, assoc, prod_comparison_snd, ‚Üêi.map_comp, prod_comparison_snd]
      apply (adjunction.of_right_adjoint i).Unit.naturality

theorem bijection_natural (A B : C) (X X' : D) (f : (left_adjoint i).obj (A ‚®Ø B) ‚ü∂ X) (g : X ‚ü∂ X') :
  bijection i _ _ _ (f ‚â´ g) = bijection i _ _ _ f ‚â´ g :=
  by 
    dsimp [bijection]
    apply i.map_injective 
    rw [i.image_preimage, i.map_comp, i.image_preimage, comp_id, comp_id, comp_id, comp_id, comp_id, comp_id,
      adjunction.hom_equiv_naturality_right, ‚Üêassoc, curry_natural_right _ (i.map g),
      unit_comp_partial_bijective_natural, uncurry_natural_right, ‚Üêassoc, curry_natural_right,
      unit_comp_partial_bijective_natural, uncurry_natural_right, assoc]

/--
The bijection allows us to show that `prod_comparison L A B` is an isomorphism, where the inverse
is the forward map of the identity morphism.
-/
theorem prod_comparison_iso (A B : C) : is_iso (prod_comparison (left_adjoint i) A B) :=
  ‚ü®‚ü®bijection i _ _ _ (ùüô _),
      by 
        rw [‚Üê(bijection i _ _ _).Injective.eq_iff, bijection_natural, ‚Üêbijection_symm_apply_id, Equiv.apply_symm_apply,
          id_comp],
      by 
        rw [‚Üêbijection_natural, id_comp, ‚Üêbijection_symm_apply_id, Equiv.apply_symm_apply]‚ü©‚ü©

