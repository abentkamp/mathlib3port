/-- A unbundled functor. -/
class functorial (F : C ‚Üí D) : Type max v‚ÇÅ v‚ÇÇ u‚ÇÅ u‚ÇÇ where
  map : ‚àÄ {X Y : C}, (X ‚ü∂ Y) ‚Üí (F X ‚ü∂ F Y)
  map_id' : ‚àÄ X : C, map (ùüô X) = ùüô (F X) := by
    run_tac
