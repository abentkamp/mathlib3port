/--  The inverse relation : `r.inv x y ↔ r y x`. Note that this is *not* a groupoid inverse. -/
def inv : Rel β α :=
  flip r

theorem inv_def (x : α) (y : β) : r.inv y x ↔ r x y :=
  Iff.rfl

theorem inv_invₓ : inv (inv r) = r := by
  ext x y
  rfl

