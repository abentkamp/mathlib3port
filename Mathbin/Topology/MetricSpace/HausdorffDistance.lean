  infi_emptyset

theorem le_inf_edist {d} : d ‚â§ inf_edist x s ‚Üî ‚àÄ y _ : y ‚àà s, d ‚â§ edist x y :=
  by 
    simp only [inf_edist, le_infi_iff]

